{
  "private": true,
  "description": "元宇宙前端 vue3 组件库",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "postinstall": "pnpm gen:version",
    "gen:version": "tsx scripts/gen-version.ts",
    "diff:table": "tsx scripts/build-table.ts",
    "update:version": "tsx scripts/update-version.ts",
    "start": "pnpm i",
    "clean": "pnpm clean:dist",
    "clean:dist": "rimraf dist",
    "changelog": "pnpm conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && npm run changeissueurl",
    "build:ui": "gulp --require @esbuild-kit/cjs-loader -f packages/umi-meta-ui/gulpfile.ts",
    "build": "pnpm --filter=@umi-meta/* run build",
    "pub": " pnpm scripts/publish.sh",
    "am": "git add . & git-cz",
    "cm": "git-cz"
  },
  "author": "landj@bwoil.com",
  "license": "MIT",
  "lint-staged": {
    "/src/**/*.{js,jsx,ts,tsx,vue}": [
      "eslint --cache --fix",
      "prettier --write",
      "git add"
    ],
    "/src/**/*.{css,scss,less}": [
      "stylelint --cache --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  },
  "devDependencies": {
    "@babel/parser": "^7.21.4",
    "@babel/types": "^7.21.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@pnpm/find-workspace-packages": "^6.0.6",
    "@pnpm/types": "^9.0.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-url": "^8.0.1",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/compiler-core": "^3.2.47",
    "@vue/compiler-dom": "^3.2.47",
    "@vue/reactivity": "^3.2.47",
    "@vue/runtime-core": "^3.2.47",
    "@vue/runtime-dom": "^3.2.47",
    "@vue/shared": "^3.2.47",
    "@vueuse/core": "^10.1.0",
    "@vueuse/shared": "^10.1.0",
    "chalk": "^5.2.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "csstype": "^3.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^43.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.11.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.1",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "rollup": "^3.21.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-filesize": "^10.0.0",
    "sass": "^1.62.0",
    "source-map": "^0.7.4",
    "stylelint": "^15.6.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended-scss": "^11.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-scss": "^4.6.0",
    "ts-morph": "^18.0.0",
    "tsx": "^3.12.6",
    "type-fest": "^3.8.0",
    "typescript": "^5.0.4",
    "unplugin-vue-define-options": "^1.3.3",
    "unplugin-vue-macros": "^2.0.0",
    "vue": "^3.2.47",
    "vue-demi": "^0.14.0",
    "vue-eslint-parser": "^9.1.1"
  },
  "dependencies": {
    "@umi-meta/components": "workspace:^",
    "@umi-meta/constants": "workspace:^",
    "@umi-meta/directives": "workspace:^",
    "@umi-meta/hooks": "workspace:^",
    "@umi-meta/internal": "workspace:^",
    "@umi-meta/locale": "workspace:^",
    "@umi-meta/theme-chalk": "workspace:^",
    "@umi-meta/utils": "workspace:^"
  }
}
